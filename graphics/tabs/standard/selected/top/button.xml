<!-- image properties -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="10" right="8" top="0" bottom="0"/>
<record id="image_slices" left="5" right="5"/>

	<record id="font_spec">
		<colour id="colour" name="bg"/>
	</record>

	<colour id="red_replacement" name="bg custom green"/>
	<colour id="blue_replacement" name="fg"/>

	<record id="primary_icon_properties" red_replacement="bg" />
	<record id="secondary_icon_properties" red_replacement="bg"/>

</properties>
