<panel>

  <layout class="arrange_vertical_attachment" alignment="top" offset="0"/>
  <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>
  
  <container height="85">
    <layout class="arrange_horizontal_attachment" layout="-1,-1" offset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0"/>

    <container>
      <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" do_not_size="true"/>
      <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

      <!--condition label-->
      <widget class="text" id="conl" alignment="centre" height="25" multiline="false" size="10" style="bold">
        <record id="object_property">
          <integer id="get_property" value="Pcon" />
          <boolean id="name" value="true" />
        </record>
      </widget>

      <container height="60">
        <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
        
        <widget class="pie_condition_label" file="widgets/pie condition label big" id="conv" auto_size="none" style="bold, embossed" size="10" alignment="centre" mode="0">
          <record id="object_property">
            <integer id="get_property" value="Pcon" />
          </record>
        </widget>

      </container>

      <!--condition percentage bar-->
    </container>

    <container>
      <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" do_not_size="true"/>
      <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

      <widget class="text" id="fitl" alignment="centre"  height="25" multiline="false"  size="10" style="bold">
        <record id="object_property">
          <integer id="get_property" value="Pfit" />
          <boolean id="name" value="true" />
        </record>
      </widget>

      <container height="60">
        <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

        <!--fitness label-->


        <!--fitness value-->
   
        <widget class="pie_condition_label" file="widgets/pie condition label big" id="fitv" auto_size="none" style="bold, embossed" size="10" alignment="centre" mode="1">
          <record id="object_property">
            <integer id="get_property" value="Pfit" />
          </record>
        </widget>
      </container>

      <!--fitness percentage bar-->
    </container>


  </container>

  <widget class="picture" id="pict" file="dividers/standard/horizontal/line" height="2"/>
  
  <!--fitness text-->
    <widget class="fitness_label" id="fitL" multiline="true" auto_size="vertical">
      <record id="object_property">
        <integer id="get_property" value="Pcsr" />
      </record>
    </widget>

</panel>
